<UserControl x:Class="OnScreenKeyboard.AttachElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OnScreenKeyboard"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="64" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="16" />
        </Grid.ColumnDefinitions>

        <local:NinePatchPurple Grid.ColumnSpan="4" ></local:NinePatchPurple>
        <Image Name="icon" Grid.Column="1" Height="48" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBlock Name="caption" Grid.Column="2" Text="QWER TYUIOPOIGF FYJG FYG FUY IGUY K GKUYF UFU uhfvuirhvui uigfiu fiuwg figfuwegfiu wfg" Foreground="White" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="80" FontFamily="/OnScreenKeyboard;component/Fonts/#Univers Condensed" FontSize="32" Margin="32"/>
    </Grid>
</UserControl>
